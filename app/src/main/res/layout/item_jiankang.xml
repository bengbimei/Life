<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/add_cellbg2"
    android:layout_height="60dp">
<ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/iv_item_jiankang"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_marginRight="10dp"
    android:src="@drawable/ic_launcher"/>
 <LinearLayout
     android:layout_width="200dp"
     android:layout_height="60dp"
     android:layout_toRightOf="@id/iv_item_jiankang"
     android:orientation="vertical">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="30dp"

      android:text="11111"
      android:gravity="bottom"
      android:textSize="18sp"
      android:textColor="@color/black"
      android:id="@+id/tv1_item_jiankang"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="30dp"
         android:text="111111"
         android:textSize="13sp"
         android:textColor="@color/gray"
         android:id="@+id/tv2_item_jiankang"/>

     </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/goarrow_gray"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
</RelativeLayout>