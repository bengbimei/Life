<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="15dp">
<ImageView
    android:id="@+id/iv_itemcontent_chunjidetail"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginLeft="15dp"
    android:src="@drawable/ic_launcher"/>
<TextView
    android:id="@+id/tv_itemcontent_chunjidetai"
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:gravity="center_vertical"
    android:text="111111"
    android:layout_toRightOf="@id/iv_itemcontent_chunjidetail"/>
    <ImageView
        android:id="@+id/iv2_itemcontent_chunjidetail"
        android:layout_width="40dp"
        android:layout_height="30dp"

        android:src="@drawable/ic_launcher"
        android:layout_toRightOf="@id/iv_itemcontent_chunjidetail"
        android:layout_alignBottom="@id/iv_itemcontent_chunjidetail"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/list_cell_arrow"
        android:layout_alignParentRight="true"
       android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tv2_itemcontent_chunjidetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1111111111111"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/iv_itemcontent_chunjidetail"/>

</RelativeLayout>