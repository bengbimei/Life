<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_top_chunjidetail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/ic_launcher"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/alpha"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/back"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/ivtop_chunjidetail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tabbar_family"
                    android:padding="3dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="为用户名挑选"
                    android:layout_toRightOf="@id/ivtop_chunjidetail"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/hfdetailarrow"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:src="@drawable/weixin"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_top_chunjidetail"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_top_chunjidetail"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="70dp"
            android:background="@color/alpha"
            android:text="111111111111111"/>
    </LinearLayout>
</LinearLayout>